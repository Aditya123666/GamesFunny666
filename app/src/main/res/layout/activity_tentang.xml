<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:orientation="vertical"
    tools:context="com.example.harun.gamesfunny.Tentang">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="400dp"
            android:layout_gravity="center"
            android:layout_height="150dp"
            android:src="@drawable/backgf"
            />
        <TextView
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="Aplikasi game ini bernama (FUNNYGAMES), game ini di dirikan oleh BSO,dengan perwakilan anggota Putri,Aditya dan Fathimah,Funny Games Versi 1.0 ini terbit di Play Store pada 8 Februari 2018"
            android:textSize="20dp"
            />
    </LinearLayout>
</LinearLayout>
