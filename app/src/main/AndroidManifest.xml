<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.harun.gamesfunny">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".FoodList"
            android:label="Food List"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".NavBar"
            android:label="@string/title_activity_nav_bar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".help" />
        <activity android:name=".Tentang" />
        <activity android:name=".TentangKita" />
        <activity android:name=".GameSatu" />
        <activity android:name=".GameDua" />
        <activity android:name=".GameTiga" />
    </application>

</manifest>